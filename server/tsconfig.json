{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "src/index.ts",
    "src/config/**/*",
    "src/routes/sqlite-auth.ts",
    "src/routes/classes.ts",
    "src/routes/subjects.ts",
    "src/routes/dashboard.ts",
    "src/routes/parents.ts"
  ],
  "exclude": ["node_modules", "dist"]
}