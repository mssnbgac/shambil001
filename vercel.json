{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://shambil001.onrender.com/api"
  },
  "functions": {
    "client/build/**": {
      "maxDuration": 10
    }
  }
}